<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_view_horizontal_margin"
    android:paddingLeft="@dimen/card_view_vertical_margin"
    android:paddingRight="@dimen/card_view_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/purple">

        <TextView
            android:id="@+id/tv_full_name"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:text="Material Design is stunning!!!"
            android:textSize="24sp"
            android:textColor="@color/green"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>

